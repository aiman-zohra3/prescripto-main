pipeline {
    agent any
    
    environment {
        DOCKER_COMPOSE = 'docker-compose'
        GIT_REPO = 'https://github.com/aiman-zohra3/prescripto-main.git'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code from GitHub...'
                git branch: 'main', 
                    url: 'https://github.com/aiman-zohra3/prescripto-main.git'
            }
        }
        
        stage('Clean Up') {
            steps {
                echo 'Cleaning up previous builds...'
                script {
                    try {
                        sh "${DOCKER_COMPOSE} down -v"
                        sh "docker system prune -f"
                    } catch (Exception e) {
                        echo "Cleanup completed with warnings: ${e.message}"
                    }
                }
            }
        }
        
        stage('Start Containers') {
            steps {
                echo 'Starting containers with Docker Compose...'
                script {
                    dir('.') {
                        sh "${DOCKER_COMPOSE} up -d"
                    }
                }
            }
        }
        
        stage('Verify Build') {
            steps {
                echo 'Verifying that containers are running...'
                script {
                    sleep(time: 10, unit: 'SECONDS')
                    sh "docker ps"
                    sh "${DOCKER_COMPOSE} ps"
                }
            }
        }
        
        stage('Health Check') {
            steps {
                echo 'Performing health checks...'
                script {
                    // Check if containers are running
                    def backendStatus = sh(
                        script: "docker inspect -f '{{.State.Running}}' prescripto-backend-ci || echo 'false'",
                        returnStdout: true
                    ).trim()
                    def clientStatus = sh(
                        script: "docker inspect -f '{{.State.Running}}' prescripto-client-ci || echo 'false'",
                        returnStdout: true
                    ).trim()
                    def adminStatus = sh(
                        script: "docker inspect -f '{{.State.Running}}' prescripto-admin-ci || echo 'false'",
                        returnStdout: true
                    ).trim()
                    
                    echo "Backend Status: ${backendStatus}"
                    echo "Client Status: ${clientStatus}"
                    echo "Admin Status: ${adminStatus}"
                    
                    if (backendStatus == 'false' || clientStatus == 'false' || adminStatus == 'false') {
                        error('One or more containers failed to start')
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully!'
            echo 'Application is running on:'
            echo '- Backend: http://localhost:5000'
            echo '- Client: http://localhost:6000'
            echo '- Admin: http://localhost:6001'
        }
        failure {
            echo 'Pipeline failed!'
            script {
                sh "${DOCKER_COMPOSE} logs"
                sh "${DOCKER_COMPOSE} down"
            }
        }
        always {
            echo 'Pipeline execution completed.'
            // Optionally clean up
            // sh "${DOCKER_COMPOSE} down"
        }
    }
}
